@{
    ViewBag.Title = "Actualizar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Actualizar producto</h1>
<section id="contact" class="contact-section contact-style-1 mb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="contact-form-wrapper">
                    <!--<i class="lni lni-text-format"></i> <i class="lni lni-user"></i> <i class="lni lni-envelope"></i> <i class="lni lni-phone"></i> <i class="lni lni-comments-alt"></i>-->
                    <form action="" method="POST">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="single-input">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" id="nombre" name="nombre" class="form-input" placeholder="Name">
                                    <i class="lni lni-coin"></i>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="single-input">
                                    <label for="apellido1">Primer apellido</label>
                                    <input type="text" id="apellido1" name="apellido1" class="form-input" placeholder="0">
                                    <i class="lni lni-coin"></i>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="single-input">
                                    <label for="apellido2">Segundo apellido</label>
                                    <input type="text" id="apellido2" name="apellido2" class="form-input" placeholder="0">
                                    <i class="lni lni-coin"></i>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="single-input">
                                    <label for="correo">Correo electrónico</label>
                                    <input type="email" id="correo" name="correo" class="form-input" placeholder="0">
                                    <i class="lni lni-coin"></i>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="single-input">
                                    <label for="contrasena">Contraseña</label>
                                    <input type="text" id="contrasena" name="contrasena" class="form-input" placeholder="0">
                                    <i class="lni lni-coin"></i>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-button">
                                    <button type="submit" class="button radius-10">Actualizar<i class="lni lni-telegram-original"></i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="contact-image">
        <img src="~/images/form/illustation.svg" alt="">
    </div>
</section>
