@model dynamic
@{
    ViewBag.Title = "Perfil";
}


<section class="login-section login-style-2 mb-80">
    <div class="container">
        <div class="login-wrapper img-bg">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-xl-5 offset-xl-1">
                    <div class="login-content-wrapper">

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (Session["Datos"] != null)
{
    var s = this.Session["Datos"] as Usuarios;
    if (!s.PermisosID.Equals(2))
    {
        <h1>Listado de tiquetes pendientes por aprobación</h1>
        <table class="table table-striped table-bordered" id="tablaUsuarios">
            <thead>
                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Empleado</th>
                    <th>Cliente</th>
                    <th>Presupuesto</th>
                    <th>Detalles</th>
                    <th>Ver / Aprobar / Reprobar</th>
                </tr>
            </thead>
            <tbody>
                <!--row goes here-->
                <tr>
                    @foreach (var item in Model.ctau)
                    {
                        <td><input type="radio" name="usuarios" onclick=""></td>
                        <td>@item.TicketID</td>
                        <td>@item.Fecha</td>
                        <td>@item.Usuario_Empleado_Asig</td>
                        <td>@item.Usuario_Cliente</td>
                        <td>@item.Presupuesto</td>
                        <td><span title="@item.Detalles">Ver más detalles</span> <!--Quizá un alert--></td>
                        <td>
                            <a href="">Ver</a> / 
                            <a href="">Reprobar</a> / 
                            <a href="">Eliminar</a>
                        </td>
                    }
                </tr>
                <!--Row ends here-->
            </tbody>
        </table>
    }
}

<script>
    function myFunction() {
        var x = document.getElementById("password");
        if (x.type === "password") { x.type = "text"; } else { x.type = "password"; }
    }
</script>


@section Scripts
{
    @Scripts.Render("/FuncionesJS/UsuarioJs.js")
}


