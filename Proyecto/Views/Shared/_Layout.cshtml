<!DOCTYPE html>
<html style="height: 100%">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CrazyTech</title>
    <!--Old styles-->
    <link href="~/Styles/font-awesome.css" rel="stylesheet" />
    <link href="~/Styles/style.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:200,200i,300,300i,400,400i,600,600i,700,700i,900,900i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <!--Old styles end-->
    <!--Lindy template styles-->
    <link rel="stylesheet" href="~/Styles/bootstrap-5.0.0-alpha-2.min.css" />
    <link rel="stylesheet" href="~/Styles/LineIcons.2.0.css" />
    <link rel="stylesheet" href="~/Styles/tiny-slider.css" />
    <link rel="stylesheet" href="~/Styles/glightbox.min.css" />
    <link rel="stylesheet" href="~/Styles/animate.css" />
    <link rel="stylesheet" href="~/Styles/lindy-uikit.css" />
    <!--Lindy template styles end-->
    <!-- Esto me esta generando error con la plantilla, por lo que lo estoy comentando.
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    -->
</head>
<body style="min-height: 100%">
    <header class="header header-2 mb-30">
        <div class="navbar-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <!--El logo original lo saqué de https://www.facebook.com/The-CRAZY-TECH-433607674037419/, no es mío ni tenemos afiliación a la página-->
                            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="~/images/crazytech/logo-texto.png" alt="Logo" style="height:40px" /></a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent2" aria-controls="navbarSupportedContent2" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="toggler-icon"></span><span class="toggler-icon"></span><span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent2">
                                <ul id="nav2" class="navbar-nav ml-auto">
                                    <li class="nav-item">@Html.ActionLink("Categorías de productos", "Categorias", "Productos", new { }, new { @class = "page-scroll" })</li>
                                </ul>

                                <!--El navbar no se ve tan bonito, pero se arregla cuando hay menor cantidad de elementos.-->
                                <!--If session datos diferente de null-->
                                @if (Session["Datos"] != null)
                                {
                                    if (Session["Datos"].Equals(0))
                                    {
                                        @Html.ActionLink("Mi Perfil", "Perfil", "Usuario", new { }, new { @class = "button button-sm border-button radius-30 mr-20" })
                                        <!-- If la session es de cliente-->@Html.ActionLink("Hacer solicitud", "Solicitud", "Tiquetes", new { }, new { @class = "button button-sm radius-30" })
                                    }
                                    else
                                    {

                                        @Html.ActionLink("Mi Perfil", "Perfil", "Usuario", new { }, new { @class = "button button-sm border-button radius-30 mr-20" })
                                        <!-- If la session es de administrador-->@Html.ActionLink("Revisar tiquetes", "Solicitudes", "Tiquetes", new { }, new { @class = "button button-sm radius-30" })
                                    }




                                    <!--Else la session está vacía-->
                                }
                                else
                                {
                                    @Html.ActionLink("Iniciar sesión", "IngresoUsuarios", "Usuario", new { }, new { @class = "button button-sm border-button radius-30 mr-20" })
                                    @Html.ActionLink("Registrarse", "RegistroUsuarios", "Usuario", new { }, new { @class = "button button-sm radius-30" })
                                }





                                <!--Else la session está vacía FIN-->
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr /><footer><p>&copy; @DateTime.Now.Year - CracyTech © Derechos reservados</p></footer><br />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/bootstrap.5.0.0.alpha-2-min.js")
    @Scripts.Render("~/scripts/tiny-slider.js")
    @Scripts.Render("~/scripts/count-up.min.js")
    @Scripts.Render("~/scripts/imagesloaded.min.js")
    @Scripts.Render("~/scripts/isotope.min.js")
    @Scripts.Render("~/scripts/glightbox.min.js")
    @Scripts.Render("~/scripts/wow.min.js")
    @Scripts.Render("~/scripts/main.js")
    @Scripts.Render("~/scripts/header.js")
    @RenderSection("scripts", required: false)
</body>
</html>
